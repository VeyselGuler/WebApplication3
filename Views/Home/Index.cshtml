@model IEnumerable<Product>

<h1>Ürünler</h1>

<table class="table">
    <thead>
    <tr>
        <th>Başlık</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Detaylar</th>
        <th>Güncelle</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
    <tr>
        <td>@product.Title</td>
        <td>@product.Price</td>
        <td>@product.Stock</td>
        <td>
            <a href="/Home/Details/@product.Id">Detaylar</a>
        </td>
        <td>
            <a href="/UpdateProduct/@product.Id">Güncelle</a>
        </td>
    </tr>
    }
    </tbody>
</table>
